<h1>Welcome to Wikiful. Here are some recent articles</h1>
<ol>
	<% @recent_articles.each do |article|%>
	<li>
		<%= link_to article.title, article %>
		<p>Date published: <%=article.created_at.strftime('%d %b %Y') %></p>
		<p>Categories: <% article.categories.each do |category| %>
		<% if category != article.categories.last %>
		<%= link_to category.name, category %>, 
		<% else %>
		<%= link_to category.name, category %>
		<% end %>
		<% end %>
		<p><%= truncate(article.content, length: 100) %></p>


	</li>
	
<% end %>
</ol>
